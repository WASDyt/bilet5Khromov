<Page x:Class="bilet5Khromov.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bilet5Khromov.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid>
        <StackPanel>
            <Label> Логин </Label>
            <TextBox x:Name="UsernameTextBox" Text="" Margin="10"/>
            <Label > Пароль</Label>
            <PasswordBox x:Name="PasswordBox"  Margin="10"/>
            
            <Button Content="Login" Click="LoginButton_Click" Margin="10"/>
            <Button Content="Смотреть без авторизации" Click="ScipButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
