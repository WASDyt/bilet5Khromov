<Page x:Class="bilet5Khromov.Views.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bilet5Khromov.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage" Background="White">

    <Grid>
        <StackPanel>
            <Button Content="Back" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Name:" Margin="10"/>
            <TextBox x:Name="NameTextBox" Margin="10"/>
            <TextBlock Text="Type:" Margin="10"/>
            <TextBox x:Name="TypeTextBox" Margin="10"/>
            <TextBlock Text="Price:" Margin="10"/>
            <TextBox x:Name="PriceTextBox" Margin="10"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
